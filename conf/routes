# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# PersonController
GET     /                                                   com.jti.tionlie.master_data.controllers.PersonCon.index()
GET      /api/persons                                       com.jti.tionlie.master_data.controllers.PersonCon.findAll()
GET      /api/person/findByNama/:nama                      com.jti.tionlie.master_data.controllers.PersonCon.findyByNama(nama:String)
GET      /api/person/filter                                 com.jti.tionlie.master_data.controllers.PersonCon.filter(nama ?= "" ,umur ?="" , alamat ?="")
GET      /api/person/:id                                    com.jti.tionlie.master_data.controllers.PersonCon.findById(id:String)
POST     /api/person/create                                 com.jti.tionlie.master_data.controllers.PersonCon.addPerson()
PUT      /api/person/:id/edit                               com.jti.tionlie.master_data.controllers.PersonCon.editPerson(id:String)
DELETE   /api/person/:id/delete                             com.jti.tionlie.master_data.controllers.PersonCon.deletePerson(id:String)


# CityController
POST    /api/city/create                                       @com.jti.tionlie.master_data.controllers.CityCon.addCity()






# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
